<resources>
<color name="white_opaque">#C32148</color>
<color name="tilebar">#5B92E5</color>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/white_opaque</item>
        <item name="android:windowTitleBackgroundStyle">@color/tilebar</item>
    </style>
    <style name="CustomFontStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:capitalize">words</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">20pt</item>
        <item name="android:textColor">#E5E4E2</item>/>
    </style>
<style name="EStyle">
    <item name="android:capitalize">characters</item>
</style>
</resources>
